@model Victuz.Models.ActivityModel

@{
    ViewData["Title"] = "Activiteit Aanmaken";
}

<h1 class="text-center">Nieuwe Activiteit Aanmaken</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Activiteit</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                         
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"><i class="fas fa-edit"></i> Naam van de Activiteit</label>
                            <input asp-for="Name" class="form-control" placeholder="Vul de naam van de activiteit in" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                         
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"><i class="fas fa-align-left"></i> Beschrijving</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Geef een beschrijving van de activiteit"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                         
                        <div class="form-group mb-3">
                            <label asp-for="DateTime" class="control-label"><i class="fas fa-calendar-alt"></i> Datum & Tijd</label>
                            <input asp-for="DateTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>
                         
                        <div class="form-group mb-3">
                            <label asp-for="MaxParticipants" class="control-label"><i class="fas fa-users"></i> Maximaal aantal deelnemers</label>
                            <input asp-for="MaxParticipants" class="form-control" placeholder="Vul het maximum aantal deelnemers in" />
                            <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                        </div>

                        
                        <div class="form-group mb-3">
                            <label asp-for="CategoryIds" class="control-label"><i class="fas fa-tags"></i> Categorieën</label>
                            <select asp-for="CategoryIds" class="form-control" asp-items="ViewBag.CategoryIds" multiple>
                                <option value="" disabled>Kies één of meerdere categorieën</option>
                            </select>
                        </div>
                         
                        <div class="form-group mb-3">
                            <label asp-for="LocationId" class="control-label"><i class="fas fa-map-marker-alt"></i> Locatie</label>
                            <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId">
                                <option value="" disabled selected>Kies een locatie</option>
                            </select>
                        </div>

                         
                        <div class="form-group mb-3">
                            <label asp-for="PaymentType" class="control-label"><i class="fas fa-credit-card"></i> Betalingstype</label>
                            <select asp-for="PaymentType" class="form-control">
                                <option value="" disabled selected>Kies een betalingstype</option>
                                <option value="FreeForEverybody">Gratis voor iedereen</option>
                                <option value="FreeForMembers">Gratis voor leden, betaald voor niet-leden</option>
                                <option value="Paid">Betaald voor iedereen</option>
                            </select>
                            <span asp-validation-for="PaymentType" class="text-danger"></span>
                        </div>
                  
                       <div class="form-group">
                        <label asp-for="OrganizerId" class="control-label"></label>
                        <select asp-for="OrganizerId" class="form-control" asp-items="ViewBag.OrganizerId">
                           <option value="" disabled selected>Kies een organisator (optioneel) </option>
                       </select>
                        </div>
 
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg"><i class="fas fa-save"></i> Aanmaken</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Annuleren</a>
                        </div>
                    </form>
                    @if(TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                </div>
                
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
