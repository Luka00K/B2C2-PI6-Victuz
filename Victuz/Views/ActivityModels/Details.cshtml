@model Victuz.Models.ActivityDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ActivityModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity.MaxParticipants)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.MaxParticipants)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.CategoryId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Activity?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@*Voor de aanmeldknop *@
@if (Model.IsRegistered)
{
    <form asp-action="Unregister" asp-controller="Registrations" method="post">
        <input type="hidden" name="activityId" value="@Model.Activity?.Id" />
        <button type="submit" style="background-color: red; color: white;">Afmelden</button>
    </form>
}
else
{
    <form asp-action="Register" asp-controller="Registrations" method="post">
        <input type="hidden" name="activityId" value="@Model.Activity?.Id" />
        <button type="submit" style="background-color: blue; color: white;">Aanmelden</button>
    </form>
}

@{
    if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
}