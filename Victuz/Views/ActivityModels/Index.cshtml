@model IEnumerable<Victuz.Models.ActivityModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxParticipants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryIds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                Betaling
            </th>
            @if (User.IsInRole("BoardMember"))
            {
                <th>
                    Organisator
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxParticipants)
            </td>
            <td>
                    @foreach(Category category in item.Categories)
                    {
                        <p> @category.Name </p>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Id)
            </td>
            <td>
                    @if (item.PaymentType == "FreeForEverybody")
                    {
                        <p> Gratis </p>
                    }
                    else if (item.PaymentType == "FreeForMembers")
                    {
                        <p> Gratis voor leden </p>
                    }
                    else if(item.PaymentType == "Paid")
                    {
                        <p> Betaald </p>
                    }
                    else
                    {
                        <p> Geen info </p>
                    }
            </td>
                    @if(User.IsInRole("BoardMember"))
                    {
                        if(item.Organizer != null)
                        {
                            <td>
                            <p>@item.Organizer.FirstName @item.Organizer.LastName</p>

                            </td>
                        }
                        else
                        {
                        }
                    }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if (User.IsInRole("BoardMember"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                }
            </td>
        </tr>
}
    </tbody>
</table>
