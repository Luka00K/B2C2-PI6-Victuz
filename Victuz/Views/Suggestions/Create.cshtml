@model Victuz.Models.Suggestion

@{
    ViewData["Title"] = "Voorstel Indienen";
}

<h1>Voorstel Indienen</h1>

<h4>Nieuw Voorstel</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Titel veld -->
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Titel</label>
                <input asp-for="Title" class="form-control" placeholder="Voer een titel in" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Beschrijving veld -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Beschrijving</label>
                <textarea asp-for="Description" class="form-control" placeholder="Beschrijf het voorstel" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            

            <input asp-for="MemberId" value="@ViewBag.MemberId" hidden />


            <!-- Knoppen -->
            <div class="form-group">
                <button type="submit" class="btn btn-success">Indienen</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Lijst met alle voorstellen</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
