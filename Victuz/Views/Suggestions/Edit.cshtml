@model Victuz.Models.Suggestion

@{
    ViewData["Title"] = "Voorstel Bewerken";
}

<h1>Voorstel Bewerken</h1>

<h4>Suggestion</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <!-- Titel veld -->
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Titel</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Beschrijving veld -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Beschrijving</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <input asp-for="MemberId" type="hidden" />

            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Terug naar overzicht</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
