@model IEnumerable<Victuz.Models.Registration>

@{
    ViewData["Title"] = "Mijn Registraties";
}

<h1>Mijn Registraties</h1>

@if (!Model.Any())
{
    <p>U heeft zich nog niet aangemeld voor activiteiten.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Activity.Name) <!-- Toont de naam van de activiteit -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Activity.Description) <!-- Toont de beschrijving van de activiteit -->
                </th>
                <th>
                    Acties
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registration in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => registration.Activity.Name) <!-- Toont de naam van de activiteit -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => registration.Activity.Description) <!-- Toont de beschrijving van de activiteit -->
                        
                    </td>
                    <td>
                        <a asp-controller="ActivityModels" asp-action="Details" asp-route-id="@registration.Activity.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@registration.Id">Uitschrijven</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
