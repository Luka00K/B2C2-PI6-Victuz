@model Victuz.Models.Registration

@{
    ViewData["Title"] = "RegisterWithoutAccount";
}

<h1>Inschrijven zonder account</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterWithoutAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Voornaam</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Achternaam</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <input type="hidden" name="activityId" value="@ViewBag.ActivityId" />

            <div class="form-group">
                <input type="submit" value="Inschrijven" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:history.back()">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
